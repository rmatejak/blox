  "definitions": {
    "UserDto": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2,
          "maxLength": 30,
          "pattern": "[0-9A-Za-zżźćńółęąśŻŹĆĄŚĘŁÓŃ\\s-]*"
        },
        "secondName": {
          "type": "string",
          "minLength": 2,
          "maxLength": 30,
          "pattern": "^[A-ZĄĘĆŹŻŁÓŚŃ][a-ząęśćźżółń]*( [A-ZĄĘĆŹŻŁÓŚŃ][a-ząęśćźżółń]*){0,1}$"
        },
        "login": {
          "type": "string",
          "minLength": 2,
          "maxLength": 30,
          "pattern": "^[A-Z0-9a-z._%+-]*$"
        },
        "email": {
          "type": "string",
          "format": "email",
          "maxLength": 50,
          "pattern": "^[A-Z0-9a-z._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,64}$"
        },
        "password": {
          "type": "string",
          "format": "password",
          "minLength": 8,
          "pattern": "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%^&+=])(?=\\S+$).{8,}$"
        },
        "confirmedPassword": {
          "type": "string",
          "format": "password",
          "minLength": 8
        },
        "roleType": {
          "type": "string",
          "enum": [
            "ADMIN",
            "USER"
          ]
        }
      },
      "required": [
        "name",
        "secondName",
        "login",
        "email",
        "password",
        "confirmedPassword",
        "roleType"
      ]
    },
    "ArticleDto": {
      "type": "object",
      "properties": {
        "categoryId": {
          "type": "integer",
          "format": "int64"
        },
        "author": {
          "type": "string",
          "minLength": 2,
          "maxLength": 100
        },
        "topic": {
          "type": "string",
          "minLength": 0,
          "maxLength": 100
        },
        "text": {
          "type": "string",
          "minLength": 0,
          "maxLength": 200
        }
      }
    },
    "BlogDto": {
